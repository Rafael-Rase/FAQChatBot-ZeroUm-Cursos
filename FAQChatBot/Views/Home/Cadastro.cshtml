<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8"> <!-- garantindo acentos e caracteres especiais -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- responsivo em celulares e tablets -->
    <title>Cadastro - ZeroUm Cursos</title> <!-- Título do navegador -->


    <!-- CSS principal do site -->
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <!-- Container principal que segura todo o conteúdo da página -->
    <div class="container">

        <!-- Área do logo e slogan -->
        <div class="logo-text-area">
            <h1>Zero Um Cursos</h1> <!-- Título principal da página -->
            <img src="~/images/logo_zero_um.png"
                 alt="Logo ZeroUm Cursos - Desenvolva com Tecnologia"> <!-- Logo da empresa, alt é o texto alternativo caso a imagem não carregue -->
            <p>Desenvolva sua carreira em Tecnologia!</p> 
        </div>

        <!-- Área do formulário de cadastro -->
        <div class="login-area">
            <div class="login-box">
                <h2>Crie sua conta</h2> <!-- Subtítulo da caixa de cadastro -->

                <!-- Formulário de cadastro -->
                <form id="cadastroForm">
                    <!-- Grupo de input: Nome completo -->
                    <div class="input-group">
                        <label for="nome">Nome Completo</label> <!-- Texto que explica o campo -->
                        <input type="text" id="nome" name="nome" required placeholder="Seu nome">
                        
                    </div>

                    <!-- Grupo de input: CPF -->
                    <div class="input-group">
                        <label for="cpf_cadastro">CPF</label>
                        <input type="text" id="cpf_cadastro" name="cpf" required placeholder="cpf (sem pontuação e barra)">
                        
                    </div>

                    <!-- Grupo de input: E-mail -->
                    <div class="input-group">
                        <label for="email_cadastro">E-mail</label>
                        <input type="email" id="email_cadastro" name="email" required placeholder="seu@email.com">
                        
                    </div>

                    <!-- Grupo de input: Telefone -->
                    <div class="input-group">
                        <label for="telefone_cadastro">Telefone</label>
                        <input type="telefone" id="telefone_cadastro" name="telefone" required placeholder="(00)00000-0000">
                       
                    </div>

                    <!-- Grupo de input: Senha -->
                    <div class="input-group">
                        <label for="senha_cadastro">Criar uma Senha</label>
                        <input type="password" id="senha_cadastro" name="senha" required placeholder="Mínimo 6 caracteres">
                        
                    </div>

                    <!-- Grupo de input: Confirmar Senha -->
                    <div class="input-group">
                        <label for="confirma_senha">Confirmar a Senha</label>
                        <input type="password" id="confirma_senha" name="confirma_senha" required placeholder="Repita a senha">
                        
                    </div>

                    <!-- Botão de envio do formulário -->
                    <button type="submit" class="btn-login">
                        Finalizar Cadastro

                    </button>

                    <!-- Link para quem já tem conta -->
                    <p class="signup-text">
                        Já tem uma conta?
                        <a asp-controller="Home" asp-action="Index" class="btn-signup">Fazer Login</a>
                        <!-- Redireciona para a página de login -->
                    </p>
                </form>
            </div>
        </div>
    </div>

    <!-- Script JavaScript para validar ou enviar os dados do formulário -->
    <script src="~/js/cadastro.js?v=1.0.0"></script>


</body>
</html>
